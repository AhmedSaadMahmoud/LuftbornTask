@model Luftborn.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-white text-center" style="background-color: #D9534F;">
                    <h2 class="mb-0">Delete Category</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <h4 class="text-danger">Are you sure you want to delete this?</h4>
                    <hr />

                    <dl class="row justify-content-center">
                        <dt class="col-sm-4 fw-bold" style="color: #0D5C63;">
                            Category Name:
                        </dt>
                        <dd class="badge col-sm-4" style="background-color: #44A1A0; color: white;">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn text-white" style="background-color: #D9534F;">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn text-white" style="background-color: #247B7B;">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
