@model IEnumerable<Luftborn.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold" style="color: #0D5C63;">Categories</h2>
        <a class="btn text-white" style="background-color: #247B7B;" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add Category
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <table class="table table-hover align-middle">
                <thead style="background-color: #44A1A0; color: white;">
                    <tr>
                        <th class="text-start">Category Name</th>
                        <th class="text-center">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-start">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm text-white" style="background-color: #247B7B;" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a class="btn btn-sm text-white" style="background-color: #44A1A0;" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a class="btn btn-sm text-white" style="background-color: #D9534F;" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert text-center" style="background-color: #78CDD7; color: #0D5C63;">
                    <i class="bi bi-exclamation-triangle"></i> No categories found.
                </div>
            }
        </div>
    </div>
</div>
