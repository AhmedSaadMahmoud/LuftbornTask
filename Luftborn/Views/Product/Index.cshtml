@model IEnumerable<Luftborn.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-black">Products</h2>
        <a asp-action="Create" class="btn shadow-sm" style="background-color: #247B7B; color: #FFFFFA;">
            <i class="bi bi-plus-lg"></i> Add Product
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden product-card" style="background-color: #FFFFFA;">
                        <div class="card-body position-relative">
                            <h5 class="card-title fw-bold" style="color: #0D5C63;">@item.Name</h5>
                            <p class="card-text text-muted mb-1">
                                <strong>Price:</strong> $@item.Price.ToString("N2")
                            </p>
                            <p class="card-text">
                                <strong>Category:</strong> <span class="badge" style="background-color: #44A1A0; color: #FFFFFA;">@item.Category.Name</span>
                            </p>
                        </div>
                        <div class="card-footer border-top-0 d-flex justify-content-between" style="background-color: #78CDD7;">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #247B7B; color: #FFFFFA;">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #44A1A0; color: #FFFFFA;">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #0D5C63; color: #FFFFFA;">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert text-center" style="background-color: #78CDD7; color: #0D5C63;">
            <i class="bi bi-exclamation-triangle"></i> No products available.
        </div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
        }
</style>
