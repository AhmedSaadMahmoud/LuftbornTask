@model Luftborn.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg border-0 rounded-4" style="background-color: #FFFFFA;">
                <div class="card-header text-white text-center" style="background-color: #247B7B;">
                    <h2 class="mb-0">Delete This Product !</h2>
                </div>

                <div class="card-body p-4 text-center">
                    @if (Model.ProductImage != null && Model.ProductImage.Length > 0)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.ProductImage)"
                             class="img-fluid rounded mb-3"
                             style="max-width: 250px; height: auto;"
                             alt="Product Image" />
                    }
                    else
                    {
                        <div class="text-muted mb-3">
                            <i class="bi bi-image" style="font-size: 3rem;"></i>
                            <p>No image available</p>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold text-black">Name:</dt>
                        <dd class="col-sm-8 text-dark">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold text-black">Price:</dt>
                        <dd class="col-sm-8 text-dark">$@Model.Price.ToString("N2")</dd>

                        <dt class="col-sm-4 fw-bold text-black">Category:</dt>
                        <dd class="col-sm-8">
                            <span class="badge" style="background-color: #44A1A0; color: white;">@Model.Category.Name</span>
                        </dd>
                    </dl>
                </div>

                <div class="card-footer border-top-0 text-center" style="background-color: #FFFFFA;">
                    <a asp-action="Index" class="btn text-white" style="background-color: #78CDD7;">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button class="btn text-white" style="background-color: #D9534F;" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #247B7B; color: white;">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn text-white" style="background-color: #D9534F;">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
